@model TwoFunTwoMeFintech.Models.dto_login
@{
	ViewBag.Title = "Crear";
	Layout = null;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <form>
            <script type="text/javascript">
                $(document).ready(function () {
                    $('input[type="text"]').val('');
                });
            </script>


            <div class="input-group">
                @*@Html.LabelFor(model => model.nombre)*@
                @Html.LabelFor(model => model.nombre, new { @class = "input-group-addon" })
                @Html.TextBox("txtnombre", "", new { @class = "form-control input-user", @placeholder = "nombre", required = "required" })

            </div>
            <div style="height:5px">
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.cod_agente, new { @class = "input-group-addon" })
                @Html.TextBox("txtcod_agente", "", new { @class = "form-control input-user", @placeholder = "Cédula", required = "required" })
            </div>
            <div style="height:5px">
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.correo, new { @class = "input-group-addon" })
                @Html.TextBox("txtCorreo", "", new { @class = "form-control input-user", @placeholder = "name@example.com", required = "required" })
                @*	<label for="exampleFormControlInput1">Email address</label>
            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">*@
            </div>
            <div style="height:5px">
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.ROLID, new { @class = "input-group-addon" })
                @Html.DropDownListFor(model => model.ROLID, new SelectList(Model.ListRoles, "ID", "ROLES"), "-- Seleccione --", htmlAttributes: new { @class = "form-control input-user", id = "ddlRoles" })
                @Html.ValidationMessageFor(model => model.ROLID, "", new { @class = "text-danger" })
                @*@Html.TextBox("ROLID", "", new { @class = "form-control", @placeholder = "ROLID", required = "required" })*@
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.IdAgencia, new { @class = "input-group-addon" })
                @Html.DropDownListFor(model => model.IdAgencia, new SelectList(Model.ListaAgencias, "IdT_AgenciasExternas", "Nombre"), "-- Seleccione --", htmlAttributes: new { @class = "form-control input-user", id = "ddlAgenciasExternas" })
                @Html.ValidationMessageFor(model => model.ROLID, "", new { @class = "text-danger" })
                @*@Html.TextBox("ROLID", "", new { @class = "form-control", @placeholder = "ROLID", required = "required" })*@
            </div>
            <div style="height:5px">
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.TipoCola, new { @class = "input-group-addon" })
                <select class="form-control input-user" id="ddlAsignacion">
                    <option value="1">Ninguno</option>
                    <option value="2">Ventas</option>
                    <option value="3">Cobros</option>
                </select>
            </div>
            <div style="height:5px">
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.pass, new { @class = "input-group-addon" })
                @Html.TextBox("txtpass", "", new { @class = "form-control input-user", @placeholder = "Password", required = "required" })
            </div>
            <div style="height:5px">
            </div>
            <div class="input-group">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "input-group-addon" })
                @Html.TextBox("txtConfirmPassword", "", new { @class = "form-control input-user", @placeholder = "ConfirmPassword", required = "required" })
            </div>
            <div style="height:5px">
            </div>
            <div class="input-group">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="Crear();">Crear</button>
            </div>
        </form>
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
    <script type="text/javascript">
            @if (!User.Identity.IsAuthenticated)
            {

                System.Web.Security.FormsAuthentication.SignOut();
                System.Web.Security.FormsAuthentication.RedirectToLoginPage();
                Response.Redirect(FormsAuthentication.LoginUrl, true);
            }

    </script>