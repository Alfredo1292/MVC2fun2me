<link href="~/Content/alertifyjs/css/themes/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/alertifyjs/css/themes/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/Content/alertifyjs/css/themes/bootstrap.rtl.min.css" rel="stylesheet" />
