@model TwoFunTwoMeFintech.Models.DTO.AsignacionBuckets

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Asignación Buckets</legend>


        <form>
            <div class="form-group">

                <label class="col-sm-2"></label>

                <div class="container">
                    <br />
                    <div style="width:90%; margin:0 auto;">
                        <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.LabelFor(model => model.id)</th>
                                    <th>@Html.LabelFor(model => model.BucketFinal)</th>
                                    <th>@Html.LabelFor(model => model.BucketInicial)</th>
                                    <th>@Html.LabelFor(model => model.PRPRotas)</th>
                                    <th>@Html.LabelFor(model => model.CeroPagos)</th>
                                    <th>@Html.LabelFor(model => model.SaldoAlto)</th>
                                    <th>@Html.LabelFor(model => model.SaldoMedio)</th>
                                    <th>@Html.LabelFor(model => model.SaldoBajo)</th>
                                    <th>@Html.LabelFor(model => model.Estado)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in @Model.listadoBucket)
                                {
                                    <tr>
                                        <th scope="row">@item.id</th>
                                        <td>@item.BucketInicial</td>
                                        <td>@item.BucketFinal</td>
                                        <td>@item.PRPRotas</td>
                                        <td>@item.CeroPagos</td>
                                        <td>@item.SaldoAlto</td>
                                        <td>@item.SaldoMedio</td>
                                        <td>@item.SaldoBajo</td>
                                        <td>@item.Estado</td>
                                        <td>
                                        <td>@item.Estado</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { ID = item.id }, new { @class = " btn btn-primary" })
                                            @Html.ActionLink("Delete", "Delete", new { ID = item.id }, new { @class = " btn btn-primary" })
                                        </td>
                                    </tr>

                                }

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>

        </form>
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
    <script type="text/javascript">
            @if (!User.Identity.IsAuthenticated)
            {

                System.Web.Security.FormsAuthentication.SignOut();
                System.Web.Security.FormsAuthentication.RedirectToLoginPage();
                Response.Redirect(FormsAuthentication.LoginUrl, true);
            }

    </script>