@{
    Layout = null;
}
<div class="">
    <div class="form-group">

    </div>
    <table ID="MAINMENUTable" class="container table table-bordered table-hover no-footer dataTable">
        <thead>
            <tr class="info">
                <th>
                    ID
                </th>
                <th>
                    Menú
                </th>
                <th>
                    Accion
                </th>
            </tr>
        </thead>
        <tbody class="tbody" id="MAINMENUTableBody"></tbody>
    </table>
</div>
<div class="modal fade" Id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">×</span></button>*@
                <button type="button" class="close" data-dismiss="modal">×</button>

			</div>
			<div class="modal-body">
				<form>
					<div class="form-group">
						<label for="ID">ID</label>
						<input type="text" class="form-control" id="ID" placeholder="ID" disabled="disabled" />
					</div>
					<div class="form-group">
						<label for="MAINMENU">Nombre</label>
						<input type="text" class="form-control" id="MAINMENU" placeholder="CodigoAgente" />
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" Id="btnUpdate" style="display:none;" onclick="Update();">Actualizar</button>
				<button type="button" class="btn btn-default" data-dismiss="modal" onclick="clearTextBox();">Cerrar</button>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
            @if (!User.Identity.IsAuthenticated)
            {

                System.Web.Security.FormsAuthentication.SignOut();
                System.Web.Security.FormsAuthentication.RedirectToLoginPage();
                Response.Redirect(FormsAuthentication.LoginUrl, true);
            }

</script>